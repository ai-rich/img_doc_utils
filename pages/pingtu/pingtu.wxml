<navigation-bar title="多图拼接" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="container">
  <view class="intro">
    支持横向拼接、纵向拼接和九宫格拼接，轻松制作长图
  </view>
  
  <view class="stitch-types">
    <view class="type-item" bindtap="chooseType" data-type="vertical">
      <image src="/assets/img/vertical.png" mode="widthFix" class="type-img"></image>
      <text class="type-text">纵向拼接</text>
    </view>
    
    <view class="type-item" bindtap="chooseType" data-type="horizontal">
      <image src="/assets/img/horizontal.png" mode="widthFix" class="type-img"></image>
      <text class="type-text">横向拼接</text>
    </view>
    
    <view class="type-item" bindtap="chooseType" data-type="grid">
      <image src="/assets/img/grid.png" mode="widthFix" class="type-img"></image>
      <text class="type-text">九宫格</text>
    </view>
  </view>
</view>
