.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  width: 100%;
}

.tips {
  font-size: 24rpx;
  color: #666;
}

.image-container {
  flex: 1;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 210rpx;
  height: 210rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.img {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.image-item:hover .remove-btn {
  opacity: 1;
}

.add-btn {
  width: 210rpx;
  height: 210rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 26rpx;
  color: #999;
}

.count-info {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  margin-top: 15rpx;
}

.settings {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
  width: 140rpx;
}

.setting-value {
  flex: 1;
}

.color-options {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.color-option {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  cursor: pointer;
  position: relative;
}

.color-option.selected::after {
  content: 'âœ“';
  position: absolute;
  color: white;
  font-size: 24rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-shadow: 0 0 2px rgba(0, 0, 0, 0.5);
}

.custom-color {
  border: 1px dashed #999;
}

.stitch-btn {
  margin: 0 30rpx 60rpx;
  padding: 20rpx 0;
  background-color: #07c160;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.stitch-btn:disabled {
  background-color: #ccc;
}

#stitchCanvas{
  position: fixed;
  z-index: -1;
}