.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.upload-section{
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #165DFF;
}

/* 上传区域样式 */
.upload-area {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.upload-area:hover {
  border-color: #165DFF;
  box-shadow: 0 4rpx 15rpx rgba(22, 93, 255, 0.1);
}

.upload-icon image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

/* 预览区域样式 */
.preview-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.preview-title::before {
  content: "";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #165DFF;
  margin-right: 10rpx;
}

.image-preview {
  width: 100%;
  margin-bottom: 25rpx;
  overflow: hidden;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  display: flex;
  justify-content: center;
}

.image-preview image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

/* 按钮样式 */
.regenerate-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #165DFF;
  color: white;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(22, 93, 255, 0.3);
  transition: all 0.2s ease;
}

.regenerate-btn:hover {
  background-color: #0E4CD1;
  box-shadow: 0 6rpx 20rpx rgba(22, 93, 255, 0.4);
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #d4237a;
  color: white;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(54, 211, 153, 0.3);
  transition: all 0.2s ease;
  margin-left: 40rpx;
}

.save-btn:hover {
  background-color: #2CB886;
  box-shadow: 0 6rpx 20rpx rgba(54, 211, 153, 0.4);
}

.save-btn .iconfont {
  margin-right: 10rpx;
}

/* 设置区域样式 */
.settings-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.setting-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.setting-input {
  height: 70rpx;
  line-height: 70rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #555;
  transition: border-color 0.2s ease;
}

.setting-input:focus {
  border-color: #165DFF;
  outline: none;
}

.slider-container {
  display: flex;
  align-items: center;
  width: 100%;
}

.slider-container slider {
  flex: 1;
  margin-right: 20rpx;
}

.slider-value {
  font-size: 26rpx;
  color: #666;
  width: 100rpx;
  text-align: right;
}

/* 颜色选择器样式 */
.color-options {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.color-option {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  cursor: pointer;
  transition: transform 0.2s ease;
  position: relative;
}

.color-option:hover {
  transform: scale(1.1);
}

.color-option.active::after {
  content: "✓";
  position: absolute;
  color: #fff;
  font-size: 24rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-shadow: 0 0 2px rgba(0, 0, 0, 0.5);
}

/* 密度选择样式 */
.density-options {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.density-option {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  background-color: #f5f5f5;
  color: #666;
  cursor: pointer;
  transition: all 0.2s ease;
}

.density-option.active {
  background-color: #165DFF;
  color: white;
}

/* 提示框样式 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 1000;
  animation: fadeInOut 2s ease;
}

@keyframes fadeInOut {
  0% { opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}
